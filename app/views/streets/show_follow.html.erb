<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @streets.any? %>
        <div class="user_avatars">
          <% @streets.each do |street| %>
            <%= link_to street.name %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @street.name %></h3>
    <br>Следят за улицей
    <% if @streets.any? %>
      <ul class="users">
        <%= render @streets %>
      </ul>

    <% end %>
  </div>
</div>